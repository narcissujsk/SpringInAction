<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="helloWorld" class="hello.HelloWorld">
		<property name="message" value="Hello World!" />
		<property name="message3" value="Hello World!" />
	</bean>
	<bean id="hi" class="hello.HelloWorld" scope="prototype"
		init-method="init" destroy-method="destroy">
		<property name="message" value="Hello World!" />
		<property name="message3" value="Hello World!" />
	</bean>

	<!-- Definition for textEditor bean -->
	<bean id="textEditor" class="hello.TextEditor">
		<property name="spellChecker" ref="spellChecker" />
	</bean>
	<bean class="hello.InitSpellChecker" />
	<!-- Definition for spellChecker bean -->
	<bean id="spellChecker" class="hello.SpellChecker">
	</bean>
</beans>